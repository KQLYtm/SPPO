@model sppo.Models.Forms.FormViewVM

@{

}

@foreach (var s in Model.rows)
{
    <div style="display:inline-flex">
        <div class="container">
            <div class="row" style="width:350%">
                <div class="col-lg-4">
                    <div class="card m-b-30">
                        <div class="card-body">
                            <div class="media">
                                <div class="media-body">
                                    <h5 class="mt-0 font-18 mb-1">@s.Profile</h5>
                                    <p class="text-muted font-14">@s.Advertisement</p>
                                    <p class="text-muted font-14">@s.MotivationMessage</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<style>
    body {
        background: #eff3f6;
    }

    .thumb-lg {
        height: 88px;
        width: 88px;
    }

    .card {
        border: none;
        box-shadow: 1px 0px 20px rgba(0, 0, 0, 0.05);
    }

    .m-b-30 {
        margin-bottom: 30px;
    }
</style>