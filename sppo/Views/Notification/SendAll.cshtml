@using sppo.Models
@model Notifikacije
@{ ViewData["Title"] = "Index"; }
<h1>Index</h1>
@using (Html.BeginForm("SendAll", "Notification", FormMethod.Post, new { id = "Notifikacije" }))
{
    <div class="row">
        <div class="col-6">
            Naslov
        </div>
        <div class="col-6">
            @Html.TextBoxFor(model => Model.Naslov, new { @maxlength = "50" })
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-6">
            Sadrzaj
        </div>
        <div class="col-6">
            @Html.TextBoxFor(model => Model.Sadrzaj, new { @maxlength = "100" })
        </div>
    </div>
    <div>
        <button type="submit">Send to All</button>
    </div>}
